					img.lazy-bg(src="#" data-src=`img/prod-${i}.jpg`, alt="") 
			.col-xl-12.col-md-6
				+e.caption--lg
					+e.title
						a.text-body.tdn(href="#")= t
							.d-xl-block.d-inline-block.text-primary= t2
					+e.UL.list
						each item in items
							+e.LI.item
								+e.link.body-link(href='#')= item 
