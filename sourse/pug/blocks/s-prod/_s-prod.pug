mixin prodf(t,pr, ...items)
	+b.item-prod&attributes(attributes)
		+e.head
			.row
				.col
					+e.title
						strong= t
						| 
						+e.SPAN.price= pr
				.col-auto
					+e.btn.btn-primary.popup-with-move-anim(href="#modal-call-new" data-title="Оставить заявку" data-btn="Оставить заявку") Заказать
		+e.row.row

			if block
				block
			else
				.col-auto
					each item in items
						+e.item: +e.link(href='#')= item
		+pic("prod")
mixin prod-snow(t,pr, i)
	+b.item-prod--snow&attributes(attributes)
		+e.head
			+e.title
				strong= t
				| 
				+e.SPAN.price= pr
		block
		+e.btn.btn-primary.popup-with-move-anim(href="#modal-call-new" data-title="Оставить заявку" data-btn="Оставить заявку") Заказать
		+pic(i,'','')

