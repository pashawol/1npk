
mixin prod(t, t2, ...items)
	+b.item-prod&attributes(attributes)
		block
		+e.caption
			+e.title
				a.text-body.tdn(href="#")= t
					.d-xl-block.d-inline-block.text-primary= t2
			+e.UL.list
				each item in items
					+e.LI.item
						+e.link.body-link(href='#')= item 
mixin prod-cap(t, t2 )
	+b.item-prod--cap&attributes(attributes)
		+e.caption
			+e.title
				.text-body.tdn()= t
					.d-xl-block.d-inline-block.text-primary= t2 
			block


mixin prod1(i,t, t2, ...items)
	+b.item-prod&attributes(attributes)
		.row
			.col-xl-12.col-6.d-none.d-md-block
