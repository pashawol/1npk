mixin s-video()
	// start s-video
	+b.s-video.not-slide-def.section#s-video.lazy-background&attributes(attributes)
		.container
			block
			// Добавил класс .slider-column--js убрал  .slider--js
			+e.slider.swiper-container.slider-column--js
				.swiper-wrapper
					mixin item(i)
						+e.slide.swiper-slide
							+e.item--video.bg-wrap(href="http://www.youtube.com/watch?v=0O2aH4XLbto"  data-fancybox="video-gal" data-animation-duration="500" )
								picture.picture-bg
									img.object-fit-js( src=`img/@2x/video-${i}.jpg` , alt="")
						// +e.slide.swiper-slide
					+item('1')
					+item('2')
					+item('3')
					
					+item('4')
					+item('5')
					+item('6')
					+item('6')

			+b.swiper-pagination--lg
	// end s-video
mixin s-video-03-()
	// start s-video
	+b.s-video.section#s-video.lazy-background&attributes(attributes)
		.container
			block
			+e.slider-wrap
				+e.slider--js.swiper-container
					.swiper-wrapper
						mixin item(i)
							+e.slide.swiper-slide
								+e.item.img-bg(href=`img/gal-${i}.jpg` data-fancybox="video-gal"  data-background=`img/gal-${i}.jpg` class="swiper-lazy")
									img(src="#"  data-src=`img/gal-${i}.jpg` class="swiper-lazy", alt="")
							// +e.slide.swiper-slide
						+item('1')
						+item('2')
						+item('3')
						
						+item('1')
						+item('2')

				.d-none.d-md-block
					+arrow()
			+b.swiper-pagination
	// end s-video
mixin s-video-tech()
	// start s-video
	+b.s-video.section#s-video.lazy-background&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Наша техника
			+e.slider--js.--tech.swiper-container.gal
				.swiper-wrapper.swiper-wrapper--tech
					mixin item(i)
						+e.slide.--tech.swiper-slide.col-md-4
							+e.item--tech.img-bg( data-background=`img/car-${i}.jpg` class="swiper-lazy")
								img(src="#"  data-src=`img/car-${i}.jpg` class="swiper-lazy", alt="")
								block
						// +e.slide.swiper-slide
					+item('1')
						+e.caption
							.h55.strong Самосвалы КАМАЗ 65115 / 6520
							.h6 15 тн; 20 тн; 25 тн

					+item('2')
						+e.caption
							.h55.strong Самосвалы МАЗ
							.h6 20 тн; 30 тн

					+item('3')
						+e.caption
							.h55.strong Тонары (полуприцеп)
							.h6 30 тн; 40 тн

			+b.swiper-pagination--lg.--tech
	// end s-video
