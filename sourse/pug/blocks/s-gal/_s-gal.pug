mixin s-gal()
	// start s-gal
	+b.s-gal.section#s-gal&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Фотографии проекта
				
			+e.slider-wrapper
				+e.slider.slider--js.swiper-container
					.swiper-wrapper
						mixin item(i)
							+e.col.col-lg-4.col-md-6.swiper-slide
								+e.item.img-bg(href=`img/gal-${i}.jpg`  data-fancybox="gal")
									img.lazy-bg(src="#"  data-src=`img/gal-${i}.jpg`  , alt="")
							// +e.col-lg-4.col-md-6.swiper-slide
							
						+item('1')
						+item('2')
						+item('3')
						
						+item('1')
						+item('2')
						+item('3')

			+b.swiper-pagination--lg
	// end s-gal

