mixin accord-v(t, t2) 
	+b.accord
		+e.head.h55.strong
			+e.inner= t
				|
				span.d-inline-block.text-primary=t2 
				+e.before
		+e.body
			+e.body-inner
				+e.close
				+e.body-title.h55.strong= t
					|
					span.d-inline-block.text-primary=t2 
				+e.text--vac 
					mixin group(t)
						+e.group
							+e.group-title= t
